<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="myfields">
		<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
			readonly="true" class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"/>

		<field name="title" type="text" class="inputbox"
			size="40" label="JGLOBAL_TITLE"
			description="COM_BPLP_FIELD_TITLE_DESC" required="true" />

		<field name="alias" type="text" class="inputbox"
			size="40" label="JFIELD_ALIAS_LABEL"
			description="COM_BPLP_FIELD_ALIAS_DESC" />

		<field
			name="catid"
			type="category"
			extension="com_bplp"
			class="inputbox"
			default=""
			label="COM_BPLP_FIELD_CATID_LABEL"
			description="COM_BPLP_FIELD_CATID_DESC"
		>
			<option value="0">JOPTION_SELECT_CATEGORY</option>
		</field>
		
		<field name="state" type="list"
			label="JSTATUS" description="JFIELD_PUBLISHED_DESC"
			class="inputbox small" size="1" default="1" >
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field name="image" type="media" directory="com_bplp"
			hide_none="1" label="COM_BPLP_FIELD_IMAGE_LABEL"
			size="40"
			description="COM_BPLP_FIELD_IMAGE_DESC" 
		/>
		
		<field name="company" type="text" class="inputbox"
			size="40" label="COM_BPLP_FIELD_COMPANY_LABEL"
			description="COM_BPLP_FIELD_COMPANY_DESC" required="true" />
			
		<field name="editeur" type="text" class="inputbox"
			size="40" label="COM_BPLP_FIELD_EDITEUR_LABEL"
			description="COM_BPLP_FIELD_EDITEUR_DESC" />
			
		<field name="copies" type="text" class="inputbox"
			size="40" default="1" 
			label="COM_BPLP_FIELD_COPIES_LABEL"
			description="COM_BPLP_FIELD_COPIES_DESC" />			

		<field name="url" type="text"
			description="COM_BPLP_FIELD_URL_DESC"
			label="COM_BPLP_FIELD_URL_LABEL"
			size="40"
			maxlength="255"
			/>
		
		<field name="description" type="textarea" class="inputbox"
			rows="3" cols="30" label="JGLOBAL_DESCRIPTION"
			description="COM_BPLP_FIELD_DESCRIPTION_DESC" />	

	</fieldset>
</form>