<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
	<name>com_bplp</name>
	<author>Chaib  Mostefa</author>
	<creationDate>Decembre 2014</creationDate>
	<copyright>(C) 2014 AyaSoft. All rights reserved.
	</copyright>
	<license>GNU General Public License version 2 or later; see
		LICENSE.txt</license>
	<authorEmail>infoinfomos@gmail.com</authorEmail>
	<authorUrl>www.tic-education.org</authorUrl>
	<version>1.0.0</version>
	<description>COM_BPLP_XML_DESCRIPTION</description>

	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
 
	<files folder="site">
		<filename>index.html</filename>
		<filename>controller.php</filename>
		<filename>bplp.php</filename>
		<folder>controllers</folder>
		<folder>language</folder>
		<folder>models</folder>
		<folder>views</folder>		
	</files>
	<media destination="com_bplp" folder="media">
		<filename>index.html</filename>
		<folder>images</folder>
		<folder>css</folder>
		<folder>js</folder>
	</media>	
	<administration>
		<menu img="class:categories">COM_BPLP_MENU</menu>
		<submenu>
			<menu link="option=com_bplp" view="livres" img="class:generic"
				alt="bplp/livres">com_bplp_livres</menu>		
			<menu link="option=com_categories&amp;extension=com_bplp"
				view="categories" img="class:categories" alt="bplp/Categories">com_bplp_categories</menu>		
			<menu link="option=com_bplp&amp;view=preview" img="class:generic"
				alt="bplp/Preview">com_bplp_preview</menu>
		</submenu>
		
		<files folder="admin">
			<filename>index.html</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>bplp.php</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
 
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_bplp.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_bplp.sys.ini</language>
		</languages>
	</administration>
</extension>